{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1
    },
    "mappings":{  
        "product":{  
            "properties":{  
                "productNo":{  
                    "type":"keyword"
                },
                "storeNo":{  
                    "type":"keyword"
                },
                "supplierNo":{  
                    "type":"keyword"
                },
                "version":{
                    "type":"integer",
                    "index":"no"
                },
                "name":{  
                    "type":"text",
                    "index":"analyzed",
                    "analyzer":"cjk"
                },
                "feature":{  
                    "type":"text",
                    "index":"no"
                },
                "marketingSlogan":{  
                    "type":"text",
                    "index":"no"
                },
                "startTime":{  
                    "type":"date",
                    "format":"yyyy-MM-dd HH:mm:ss"
                },
                "endTime":{  
                    "type":"date",
                    "format":"yyyy-MM-dd HH:mm:ss",
                    "index":"no"
                },
                "createTime":{  
                    "type":"date",
                    "format":"yyyy-MM-dd HH:mm:ss",
                    "index":"no"
                },
                "updateTime":{  
                    "type":"date",
                    "format":"yyyy-MM-dd HH:mm:ss"
                },
                "saleType":{
                    "type":"integer"
                },
                "hasTax":{
                    "type":"integer",
                    "index":"no"
                },
                "maxOrderQty":{
                    "type":"integer",
                    "index":"no"
                },
                "temperatureControlledType":{
                    "type":"integer"
                },
                "returnGoods":{
                    "type":"integer",
                    "index":"no"
                },
                "brandName":{
                    "type":"keyword"
                },
                "modelNo":{  
                    "type":"text",
                    "index":"analyzed",
                    "analyzer":"cjk"
                },
                "productItemName":{  
                    "type":"text",
                    "index":"analyzed",
                    "analyzer":"cjk"
                },
                "shippingMethod":{  
                    "type":"keyword"
                },
                "salePrice":{  
                    "type":"integer"
                },
                "categories":{  
                    "type":"nested",
                    "properties": {
                        "lv1":{  
                            "type":"integer"
                        },
                        "lv2":{  
                            "type":"integer"
                        },
                        "lv3":{  
                            "type":"integer"
                        },
                        "lv4":{  
                            "type":"integer"
                        },
                        "lv5":{  
                            "type":"integer"
                        }
                    }
                },
                "categoryPath":{  
                    "type":"text",
                    "index":"analyzed",
                    "analyzer":"cjk"
                }
            }
        }
    }
}
